<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Compass -->
    <declare-styleable name="Compass">
        <attr name="dialFace" format="reference" />
        <attr name="dialNeedle" format="reference" />
    </declare-styleable>
    <declare-styleable name="PatternTextView">
        <attr name="pattern" format="string" />
    </declare-styleable>
    <declare-styleable name="ScrollableViewPager">
        <attr name="scrollable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircularImageView">
        <attr name="imageBorderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderType">
            <enum name="inside" value="0" />
            <enum name="outside" value="1" />
        </attr>
    </declare-styleable>
    <!-- pull to refresh -->
    <declare-styleable name="SectionHeader">
        <attr name="header_layout" format="reference" />
        <attr name="is_collapsable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="PullToRefresh">
        <attr name="adapterViewBackground" format="reference|color" />
        <attr name="ptrHeaderBackground" format="reference|color" />
        <attr name="ptrHeaderTextColor" format="color" />
        <attr name="ptrMode">
            <flag name="pullDownFromTop" value="0x1" />
            <flag name="pullUpFromBottom" value="0x2" />
            <flag name="both" value="0x3" />
        </attr>
    </declare-styleable>

</resources>