<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/activity_club_act_manager_item_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/activity_club_act_manager_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_club_act_manager_item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/activity_club_act_manager_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_club_act_manager_item_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>