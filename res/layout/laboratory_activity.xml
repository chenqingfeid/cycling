<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/bg_border_line_color" />

    <RelativeLayout
        android:id="@+id/laboratory_activity_grid"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="@string/map_view_style_optimization"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/font_18" />

        <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
            android:id="@+id/laboratory_activity_grid_switch"
            style="@style/material_design_switch_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:checked="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:background="@color/bg_border_line_color" />

    <RelativeLayout
        android:id="@+id/laboratory_activity_foreground_view"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="@string/setting_fragment_item_foreground"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/font_18" />

        <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
            android:id="@+id/laboratory_activity_foreground_switch"
            style="@style/material_design_switch_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:checked="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:background="@color/bg_border_line_color" />

    <RelativeLayout
        android:id="@+id/laboratory_activity_cycling_screen_on"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="@string/label_cycling_screen_on"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/font_18" />

        <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
            android:id="@+id/laboratory_activity_cycling_screen_switch"
            style="@style/material_design_switch_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:checked="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_border_line_color" />

    <RelativeLayout
        android:id="@+id/laboratory_activity_cycling_keepalive_suggest"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="@string/label_cycling_keepalive_suggest"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/font_18" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_border_line_color" />

    </RelativeLayout>



</LinearLayout>