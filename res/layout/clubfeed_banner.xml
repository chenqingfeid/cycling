<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.beastbikes.framework.ui.android.widget.CircleImageView
            android:id="@+id/club_info_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/empty"
            android:src="@drawable/ic_avatar_club"
            app:borderColor="#2cffffff"
            app:borderType="outside"
            app:borderWidth="4dp" />

        <TextView
            android:id="@+id/club_info_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/club_info_logo"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/font_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/club_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/club_info_logo"
            android:layout_alignRight="@+id/club_info_logo"
            android:background="@drawable/bg_oval_1"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:paddingRight="5dp"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/club_info_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#9a9a9a"
        android:textSize="@dimen/font_13"
        android:visibility="gone" />


</RelativeLayout>