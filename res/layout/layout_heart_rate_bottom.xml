<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:heartRate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/HorizontalWeightLinear">

            <TextView
                android:id="@+id/textView_heart_rate_pie_desc"
                style="@style/HeartRateChartBottomTV"
                android:text="--" />

        </LinearLayout>

        <LinearLayout style="@style/HorizontalWeightLinear">

            <TextView
                android:id="@+id/textView_heart_rate_pie_time"
                style="@style/HeartRateChartBottomTV"
                android:drawableLeft="@drawable/ic_heart_chart_time"
                android:text="--" />

        </LinearLayout>

        <LinearLayout style="@style/HorizontalWeightLinear">

            <TextView
                android:id="@+id/textView_heart_rate_pie_percent"
                style="@style/HeartRateChartBottomTV"
                android:drawableLeft="@drawable/ic_heart_chart_percent"
                android:text="--" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.beastbikes.android.modules.cycling.activity.ui.record.widget.HeartRateBottomItemView
            android:id="@+id/heart_rate_bottom_item_view1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            heartRate:rateColor="#f6a09a"
            heartRate:rateDesc="@string/label_heart_rate_recovery_area"
            heartRate:rateRange="--" />

        <View
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:background="#222222" />

        <com.beastbikes.android.modules.cycling.activity.ui.record.widget.HeartRateBottomItemView
            android:id="@+id/heart_rate_bottom_item_view2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            heartRate:rateColor="#f06c63"
            heartRate:rateDesc="@string/label_heart_rate_burning_fat_area"
            heartRate:rateRange="--" />

        <View
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:background="#222222" />

        <com.beastbikes.android.modules.cycling.activity.ui.record.widget.HeartRateBottomItemView
            android:id="@+id/heart_rate_bottom_item_view3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            heartRate:rateColor="#e8372d"
            heartRate:rateDesc="@string/label_heart_rate_train_area"
            heartRate:rateRange="--" />

        <View
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:background="#222222" />

        <com.beastbikes.android.modules.cycling.activity.ui.record.widget.HeartRateBottomItemView
            android:id="@+id/heart_rate_bottom_item_view4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            heartRate:rateColor="#c91c03"
            heartRate:rateDesc="@string/label_heart_rate_anaerobic_area"
            heartRate:rateRange="--" />

        <View
            android:layout_width="1dp"
            android:layout_height="65dp"
            android:background="#222222" />

        <com.beastbikes.android.modules.cycling.activity.ui.record.widget.HeartRateBottomItemView
            android:id="@+id/heart_rate_bottom_item_view5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            heartRate:rateColor="#931506"
            heartRate:rateDesc="@string/label_heart_rate_limit_area"
            heartRate:rateRange="--" />

    </LinearLayout>

</LinearLayout>