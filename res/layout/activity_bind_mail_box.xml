<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    tools:context="com.beastbikes.android.modules.user.ui.binding.BindMailBoxActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@color/bg_black_color"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/activity_account_management_account_icon"
            android:src="@drawable/ic_tencent"
            android:layout_marginLeft="12.5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="19.5dp"
            android:layout_marginRight="9dp"
            android:id="@+id/activity_bind_mail_box"
            android:hint="@string/activity_bind_mail_box_str"
            android:background="@null"
            android:maxLength="18"
            android:textColorHint="@color/wheel_view_cancel"
            android:textColor="@color/wheel_view_cancel"
            android:textSize="@dimen/font_12"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:id="@+id/activity_bind_mail_box_commit"
        android:background="@color/bg_black_color"
        android:gravity="center"
        android:textSize="@dimen/font_15"
        android:text="@string/activity_bound_phone_bind_str"
        android:textColor="@color/account_management_color"/>


</LinearLayout>
