<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discover_color1">

    <com.beastbikes.framework.ui.android.widget.CircleImageView
        android:id="@+id/thumb_list_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/empty"
        android:scaleType="centerInside"
        android:src="@drawable/ic_avatar"
        app:borderWidth="0dp" />

    <TextView
        android:id="@+id/thumbTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thumb_list_item_avatar"
        android:textColor="@color/thumb_text_color"
        android:textSize="14sp" />

    <View
        android:id="@+id/shortView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/thumb_list_item_avatar"
        android:layout_marginLeft="12.5dp"
        android:background="@color/thumb_view_color"></View>

    <View
        android:id="@+id/longView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/thumb_list_item_avatar"
        android:background="@color/thumb_view_color"
        android:visibility="gone"></View>

</RelativeLayout>