<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:number="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/speed_force_ongoing_data_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.beastbikes.android.widget.NumberTextView
        android:id="@+id/speed_force_ongoing_data_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="25sp"
        number:typefaceName="@string/number_type_face_name" />

    <TextView
        android:id="@+id/speed_force_ongoing_data_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_calorie"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/font_10" />
</LinearLayout>