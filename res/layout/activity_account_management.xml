<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_account_management"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48.8dp"
            android:gravity="center"
            android:text="@string/activity_account_management_prompt"
            android:textColor="@color/wheel_view_cancel"
            android:textSize="@dimen/font_12" />

        <LinearLayout
            android:id="@+id/activity_account_management_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg_black_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_account_management_account_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12.5dp" />

            <TextView
                android:id="@+id/activity_account_management_account_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="11.5dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/activity_account_management_account_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="3"
                android:gravity="center|right"
                android:textColor="@color/wheel_view_cancel"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <com.beastbikes.android.widget.ListViewForScroll
            android:id="@+id/activity_account_management_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="23.1dp"
            android:divider="@null"></com.beastbikes.android.widget.ListViewForScroll>
    </LinearLayout>
</ScrollView>