<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/bg_black_color"
        android:layout_marginTop="32dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="12.5dp"
            android:src="@drawable/icon_findpassword_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textSize="14sp"
            android:id="@+id/activity_find_pass_word_phone_areacode"
            android:layout_marginLeft="11.5dp"
            android:textColor="@color/wheel_view_cancel"/>

        <View
            android:layout_width="1dp"
            android:layout_height="33.1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="13dp"
            android:background="@color/common_bg_color"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10.5dp"
            android:inputType="phone"
            android:singleLine="true"
            android:id="@+id/activity_find_pass_word_phone_edit"
            android:digits="1234567890"
            android:textColor="@color/text_default"
            android:textColorHint="@color/wheel_view_cancel"
            android:layout_marginRight="12.5dp"
            android:textSize="12sp"
            android:hint="@string/activity_find_pass_word_phone_hint_str"
            android:background="@null"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@color/bg_black_color">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="12.5dp"
                android:src="@drawable/icon_findpassword_code"/>
            <EditText
                android:id="@+id/activity_find_pass_word_code_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="11.5dp"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="6"
                android:digits="1234567890"
                android:textColor="@color/text_default"
                android:textColorHint="@color/wheel_view_cancel"
                android:textSize="12sp"
                android:hint="@string/activity_find_pass_word_phone_code_hint_str"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_find_pass_word_code"
            android:layout_width="74.5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_default"
            android:textSize="12sp"
            android:padding="7dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/activity_findpassword_code"
            android:text="@string/activity_find_pass_word_phone_sendcode_str"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/bg_black_color">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="12.5dp"
            android:src="@drawable/icon_findpassword"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="11.5dp"
            android:id="@+id/activity_find_pass_word_password_edit"
            android:hint="@string/activity_find_pass_word_phone_password_hint_str"
            android:background="@null"
            android:maxLength="16"
            android:inputType="textPassword"
            android:textColorHint="@color/wheel_view_cancel"
            android:textColor="@color/text_default"
            android:textSize="@dimen/font_12"/>
    </LinearLayout>
    <TextView
        android:id="@+id/activity_find_pass_word_commit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textSize="15sp"
        android:background="@color/bg_black_color"
        android:textColor="@color/account_management_color"
        android:text="@string/activity_find_pass_word_phone_commit_str"
        android:gravity="center"/>

</LinearLayout>