                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/label_rise_distance"
                    android:textColor="@color/text_white_color"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/cycling_data_rise_total_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="@string/label_meter"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/cycling_data_rise_total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/cycling_data_rise_total_unit"
                    android:text="@string/label_meter"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/font_13" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
