<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43.1dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/activity_start_navigation_unselected_tvbg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/activity_start_navigation_search">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_default"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="5.1dp"
            android:textColor="@color/navigation_textcolor"
            android:text="@string/activity_start_navigation_selected_str"/>
    </LinearLayout>
</LinearLayout>
