<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/service_manager_title"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="#999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="#111"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/service_manager_activity_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_strava" />

        <TextView
            android:id="@+id/service_manager_activity_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Strava"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/service_manager_activity_contact"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_0_5_px_solid_b9b9b9_width_radius_5dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/service_manager_contact"
                android:textColor="#fff"
                android:textSize="@dimen/font_13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>