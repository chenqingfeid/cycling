<?xml version="1.0" encoding="utf-8"?>
<com.beastbikes.android.widget.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:number="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_black_color"
    number:rv_type="rectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cycling_setting_delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/route_map_make_item_delete" />

            <TextView
                android:id="@+id/activity_cycling_setting_data_item_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingLeft="10dp"
                android:text="@string/cycling_setting_one_data"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/font_15" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/bg_border_line_color" />

            <TextView
                android:id="@+id/activity_cycling_setting_data_item_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="时间，平均速度"
                android:textColor="@color/text_white_color"
                android:textSize="@dimen/font_15" />

            <ImageView
                android:id="@+id/activity_cycling_setting_drag_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:scaleType="center"
                android:src="@drawable/route_map_make_item_drag" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_border_line_color"/>

    </LinearLayout>


</com.beastbikes.android.widget.RippleView>