<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:number="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/cycling_fragment_viewpager_data_1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cycling_fragment_viewpager_data_1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="时间"
            android:textColor="@color/text_white_color"
            android:textSize="13dp" />

        <com.beastbikes.android.widget.NumberTextView
            android:id="@+id/cycling_fragment_viewpager_data_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="00:00:00"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/cycling_number_text_view"
            number:typefaceName="@string/number_type_face_name" />
    </LinearLayout>

    <View
        android:id="@+id/cycling_fragment_viewpager_data_line"
        android:layout_width="1px"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_border_line_color" />

    <LinearLayout
        android:id="@+id/cycling_fragment_viewpager_data_2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cycling_fragment_viewpager_data_2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="时间"
            android:textColor="@color/text_white_color"
            android:textSize="13dp" />

        <com.beastbikes.android.widget.NumberTextView
            android:id="@+id/cycling_fragment_viewpager_data_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0.0"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/cycling_number_text_view"
            number:typefaceName="@string/number_type_face_name" />
    </LinearLayout>
</LinearLayout>