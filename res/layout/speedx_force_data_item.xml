<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:number="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.beastbikes.android.widget.NumberTextView
        android:id="@+id/speedx_force_data_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/color_activity_speedx_force_black_text"
        android:textSize="@dimen/font_30"
        number:typefaceName="@string/number_type_face_name" />

    <TextView
        android:id="@+id/speedx_force_data_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/label_calorie"
        android:textColor="@color/color_activity_speedx_force_black_text"
        android:textSize="@dimen/font_12" />
</LinearLayout>