<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/common_bg_color"
        android:orientation="vertical">

        <View
            android:id="@+id/activity_record_border_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="@color/bg_border_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_record_border_line"
            android:background="@color/bg_black_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_record_activity_route"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_margin="11dp"
                android:layout_weight="0"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_record_activity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_14"
                    android:text="sss"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_record_label_elapsed_time"
                        android:textColor="#999"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/activity_record_activity_elapsed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999"
                        android:textSize="@dimen/font_10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_record_activity_bottom_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    >

                    <ImageView
                        android:id="@+id/activity_record_activity_fake"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_activity_record_cheat"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/activity_record_activity_offline"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_activity_record_offline"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_record_activity_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/white"
                        android:text="SPEEDX-012012"
                        android:visibility="gone"
                        android:background="@drawable/bg_central_name"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:background="#222222" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_record_activity_distance_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_record_label_distance"
                        android:textColor="#777"
                        android:textSize="@dimen/font_10" />

                    <TextView
                        android:id="@+id/activity_record_activity_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#fff"
                        android:textSize="@dimen/font_20" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_border_line_color" />

    </RelativeLayout>
</FrameLayout>