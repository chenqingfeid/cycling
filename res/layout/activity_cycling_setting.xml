<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#292929" />

    <TextView
        android:id="@+id/cycling_page_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:text="@string/cycling_setting_title"
        android:textColor="@color/text_light_color"
        android:textSize="@dimen/font_16" />

    <View
        android:id="@+id/aaaaa"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30dp"
        android:background="#292929" />

    <TextView
        android:visibility="gone"
        android:id="@+id/setting_fragment_item_voice_prompt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:text="@string/setting_fragment_item_voice_prompt"
        android:textColor="@color/text_light_color"
        android:textSize="@dimen/font_16" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30dp"
        android:background="#292929" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/setting_fragment_item_auto_pause"
            android:textColor="@color/text_light_color"
            android:textSize="@dimen/font_16" />

        <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
            android:id="@+id/setting_fragment_item_auto_pause"
            style="@style/material_design_switch_style"
            android:layout_marginRight="24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30dp"
        android:background="#292929" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/activity_cycling_setting_mile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/mi"
            android:textColor="#ffffff" />

        <com.beastbikes.android.widget.materialdesign.MaterialRadioButton
            android:id="@+id/activity_cycling_setting_miles_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/activity_cycling_setting_mile_title" />

        <TextView
            android:id="@+id/activity_cycling_setting_kilometer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/activity_cycling_setting_miles_radiobutton"
            android:text="@string/kilometre"
            android:textColor="#ffffff" />

        <com.beastbikes.android.widget.materialdesign.MaterialRadioButton
            android:id="@+id/activity_cycling_setting_kilometer_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/activity_cycling_setting_kilometer_title" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/activity_cycling_setting_distance_unit"
            android:textColor="@color/text_light_color"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_16" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30dp"
        android:background="#292929" />


</LinearLayout>