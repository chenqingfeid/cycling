<?xml version="1.0" encoding="utf-8"?>
<com.beastbikes.android.widget.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:number="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cycling_target_config_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="上月里程"
            android:textColor="@color/text_white_color"
            android:textSize="@dimen/font_15" />

        <TextView
            android:id="@+id/cycling_target_config_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上月里程"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cycling_target_config_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_speed_force_device_checked_icon"/>

    <com.beastbikes.android.widget.NumberTextView
        android:id="@+id/cycling_target_config_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/cycling_target_config_item_check"
        android:text="100km"
        android:textColor="@color/text_white_color"
        android:textSize="@dimen/font_20"
        number:typefaceName="@string/number_type_face_name" />

</com.beastbikes.android.widget.RippleView>