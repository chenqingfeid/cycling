<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    tools:context="com.beastbikes.android.modules.user.ui.binding.BoundPhoneActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@color/bg_theme_black_color"
            android:layout_width="match_parent"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:paddingBottom="30dp"
            android:paddingTop="42dp"
            android:lineSpacingExtra = "2dp"
            android:textColor="@color/text_number_color"
            android:textSize="@dimen/font_12"
            android:gravity="center"
            android:text="@string/activity_bound_phone_ms"
            android:layout_height="106dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/bg_black_color"
            android:paddingTop="7.5dp"
            android:paddingBottom="7.5dp"
            android:paddingLeft="17.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="@dimen/font_14"
                android:onClick="onClick"
                android:id="@+id/activity_bound_phone_area_code"
                android:textColor="@color/text_number_color"/>
            <View
                android:layout_width="1dp"
                android:layout_marginLeft="13.5dp"
                android:layout_height="match_parent"
                android:background="@color/bg_border_line_color"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginLeft="13.5dp"
                android:layout_marginRight="13dp"
                android:inputType="phone"
                android:id="@+id/activity_bound_phone"
                android:textColor="@color/text_number_color"
                android:singleLine="true"
                android:maxLength="20"
                android:digits="1234567890"
                android:background="@null"
                android:hint="@string/activity_bound_phone_phonenumber"
                android:textColorHint="@color/text_number_color"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <View
            android:background="@color/bg_border_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/bg_black_color"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginLeft="17.5dp"
                android:singleLine="true"
                android:id="@+id/activity_bound_phone_verificationcode_tv"
                android:textSize="@dimen/font_14"
                android:text="@string/activity_bound_phone_verification_str"
                android:textColor="@color/text_number_color"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginLeft="8dp"
                android:inputType="phone"
                android:id="@+id/activity_bound_phone_verificationcode"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/text_number_color"
                android:digits="1234567890"
                android:background="@null"
                android:textColorHint="@color/text_black_color"
                android:textSize="@dimen/font_12"/>
            <View
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="7.5dp"
                android:layout_width="1dp"
                android:layout_marginLeft="13.5dp"
                android:layout_marginRight="13.5dp"
                android:layout_height="match_parent"
                android:background="@color/bg_border_line_color"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:onClick="onClick"
                android:layout_marginRight="13dp"
                android:id="@+id/activity_bound_phone_verificationcode_ok"
                android:text="@string/authentication_send_valid"
                android:textSize="@dimen/font_12"
                android:textColor="@color/text_white_color"
                android:background="@drawable/activity_bound_phone"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/activity_bound_phone_first_linear"
            android:background="@color/bg_black_color">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:id="@+id/activity_bound_phone_first"
                android:hint="@string/activity_bound_phone_password_first"
                android:background="@null"
                android:maxLength="18"
                android:inputType="textPassword"
                android:textColorHint="@color/wheel_view_cancel"
                android:textColor="@color/wheel_view_cancel"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/bg_black_color"
            android:id="@+id/activity_bound_phone_second_linear"
            android:layout_marginBottom="20dp"
            android:layout_height="44dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12.5dp"
                android:layout_marginRight="12.5dp"
                android:inputType="textPassword"
                android:id="@+id/activity_bound_phone_second"
                android:hint="@string/activity_bound_phone_password_second"
                android:maxLength="18"
                android:background="@null"
                android:textColorHint="@color/wheel_view_cancel"
                android:textColor="@color/wheel_view_cancel"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:onClick="onClick"
            android:id="@+id/activity_bound_phone_verificationcode_commit"
            android:background="@color/bg_black_color"
            android:gravity="center"
            android:textSize="@dimen/font_17"
            android:text="@string/activity_bound_phone_bind_str"
            android:textColor="@color/account_management_color"/>

    </LinearLayout>
</ScrollView>