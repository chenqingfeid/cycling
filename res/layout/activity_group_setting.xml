<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_group_setting_my_group_name_lay"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/activity_group_setting_my_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/activity_group_setting_my_group_name"
                android:textColor="@color/bg_theme_black_color"
                android:textSize="@dimen/font_16" />

            <EditText
                android:id="@+id/activity_group_setting_my_group_name_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/activity_group_setting_my_group_name"
                android:background="@drawable/transparent"
                android:gravity="right|center_vertical"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/text_black_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_group_setting_see_all_lay"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/activity_group_setting_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/activity_group_settint_group_member"
                    android:textColor="@color/bg_theme_black_color"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/activity_group_setting_my_group_see_all_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/activity_group_setting_see_all"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_club_arrow_right"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/activity_group_setting_see_all"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/font_16" />
            </RelativeLayout>

            <com.beastbikes.android.widget.LinearListView
                android:id="@+id/activity_group_setting_group_member"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:dividerPadding="5dp"
                android:orientation="horizontal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/text_light_color" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/activity_group_setting_msg_dnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/activity_group_setting_msg_dnd"
                android:textColor="@color/bg_theme_black_color"
                android:textSize="@dimen/font_16" />

            <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                android:id="@+id/activity_group_setting_msg_dnd_switch"
                style="@style/material_design_switch_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.5dp"
                android:checked="false" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/text_black_color"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/activity_group_setting_friend_name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/activity_group_setting_friend_name_show"
                android:textColor="@color/bg_theme_black_color"
                android:textSize="@dimen/font_16" />

            <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                android:id="@+id/activity_group_setting_friend_name_show_switch"
                style="@style/material_design_switch_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.5dp"
                android:checked="false" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/text_light_color" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/activity_group_setting_gropu_notices_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/activity_group_setting_group_notice"
                android:textColor="@color/bg_theme_black_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/activity_group_setting_gropu_notices_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_group_setting_gropu_notices_key"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>