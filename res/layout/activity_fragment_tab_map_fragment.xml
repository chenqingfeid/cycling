<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maprl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
         <com.baidu.mapapi.map.MapView
        android:id="@+id/activity_fragment_tab_map_fragment_baidumap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />
    -->

    <FrameLayout
        android:id="@+id/mapViewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_bg_gpsstatus"
        android:paddingBottom="4dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="GPS"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/gps_ratingbar"
            style="@style/gpsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4.5dp"
            android:numStars="5"
            android:rating="0"></RatingBar>

    </LinearLayout>

    <ImageView
        android:id="@+id/activity_fragment_tab_map_fragment_button_location"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="56dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_map_md_location" />

    <ImageView
        android:id="@+id/activity_fragment_tab_map_fragment_button_exit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="56dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_map_exit" />

    <ImageView
        android:id="@+id/activity_fragment_tab_map_fragment_enter_squad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/route_map_make_search_bg"
        android:contentDescription="@string/empty"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/enter_squad" />

    <ImageView
        android:id="@+id/activity_fragment_tab_map_fragment_show_squad"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_fragment_tab_map_fragment_enter_squad"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/route_map_make_search_bg"
        android:contentDescription="@string/empty"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/show_squad" />

    <ImageView
        android:id="@+id/activity_fragment_tab_map_fragment_route_display"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_fragment_tab_map_fragment_show_squad"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/empty"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4c000000"
        android:visibility="invisible">

        <TextView
            android:id="@+id/noticeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>