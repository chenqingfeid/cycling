<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/layout_club_activity_list_item_cover"
        android:layout_width="match_parent"
        android:background="@drawable/bg_layout_club_activity_list_item"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_club_activity_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.beastbikes.framework.ui.android.widget.CircleImageView
                android:id="@+id/layout_club_activity_list_item_avater"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_avatar" />

            <TextView
                android:id="@+id/layout_club_activity_list_item_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffff"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/layout_club_activity_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/layout_club_activity_list_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_club_activity_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_layout_club_activity_list_item_status_cancel"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/layout_club_activity_list_item_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_club_activity_ismanager_tv"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="@string/manage"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>




</RelativeLayout>