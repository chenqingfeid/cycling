<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/route_map_elevation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_route_elevation_back"
        android:drawablePadding="12dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="海拔趋势图"
        android:textColor="#444"
        android:textSize="@dimen/font_14" />

    <LinearLayout
        android:id="@+id/route_map_elevation_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/route_map_elevation_y_label"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="18dp"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/route_map_elevation_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/route_map_elevation_back"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp"
            android:text="150"
            android:textColor="#444"
            android:textSize="@dimen/font_17"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="km"
            android:textColor="#444"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/route_map_elevation_y_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/route_map_elevation_chart"
        android:layout_below="@+id/route_map_elevation_back"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:layout_marginLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:text="(海拔m)"
        android:textColor="#999999"
        android:textSize="@dimen/font_11" />


</RelativeLayout>