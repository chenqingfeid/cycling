<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/activity_offlinemap_tab_title1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/offline_map_setting_city_list"
            android:textColor="@color/offline_map_activity_tab_bar_item_label_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_offlinemap_tab_title2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/offline_map_setting_activity_already_downloaded"
            android:textColor="@color/offline_map_activity_tab_bar_item_label_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_offlinemap_tab_cursor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/offline_map_tab_cursor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c8c7cc" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_offlinemap_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>