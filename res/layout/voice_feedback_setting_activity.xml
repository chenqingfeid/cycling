<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="@string/voice_feedback_setting_activity_category_voice_feedback"
            android:textAllCaps="true"
            android:textColor="#999999"
            android:textSize="@dimen/font_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/bg_black_color"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/voice_feedback_setting_activity_label_voice_feedback"
                android:textColor="#ffffff"
                android:textSize="@dimen/font_14" />


            <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                android:id="@+id/voice_feedback_setting_activity_master_switch"
                style="@style/material_design_switch_style"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/voice_feedback_setting_activity_sub_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingTop="0dp"
                android:text="@string/voice_feedback_setting_activity_category_details"
                android:textAllCaps="true"
                android:textColor="#999999"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_black_color"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_feedback_setting_activity_label_distance"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_14" />

                    <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                        android:id="@+id/voice_feedback_setting_activity_distance_switch"
                        style="@style/material_design_switch_style"
                        android:layout_marginRight="15dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#292929" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_feedback_setting_activity_label_elapsed_time"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_14" />

                    <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                        android:id="@+id/voice_feedback_setting_activity_elapsed_time_switch"
                        style="@style/material_design_switch_style"
                        android:layout_marginRight="15dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#292929" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_feedback_setting_activity_label_velocity"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_14" />

                    <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                        android:id="@+id/voice_feedback_setting_activity_velocity_switch"
                        style="@style/material_design_switch_style"
                        android:layout_marginRight="15dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#292929" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_feedback_setting_activity_label_calorie"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_14" />

                    <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                        android:id="@+id/voice_feedback_setting_activity_calorie_switch"
                        style="@style/material_design_switch_style"
                        android:layout_marginRight="15dp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#292929" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/voice_feedback_setting_activity_label_activity_state"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/font_14" />

                    <com.beastbikes.android.widget.materialdesign.mdswitch.Switch
                        android:id="@+id/voice_feedback_setting_activity_activity_state_switch"
                        style="@style/material_design_switch_style"
                        android:layout_marginRight="15dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>