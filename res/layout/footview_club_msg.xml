<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/clubmsg_footview"
    android:background="@color/discover_color3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/footview_tv"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/showclubmsghistory"
        android:textColor="@color/club_rank_listview_diver_color"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/discover_color1"></View>

</LinearLayout>