<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <TextView
        android:id="@+id/dialog_ble_bind_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:layout_margin="20dp"
        android:text="@string/dialog_strava_unbind_tip"
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_club_manager_dialog_cancel"
            android:textColor="#e61f29"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/activity_club_manager_dialog_ok"
            android:textColor="#e61f29"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>