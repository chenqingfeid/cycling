<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <!-- 如果根布局不是LinearLayout会出现问题，不知为何 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/offlinemap_fragment_city_list_tvCityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="北京"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/offlinemap_fragment_city_list_tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/offlinemap_fragment_city_list_tvCityname"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="30M"
            android:textColor="#444444"
            android:textSize="14sp" />

